<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_tasks">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.erald_guri.smartflex_android.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_quotes"
        android:name="com.erald_guri.smartflex_android.ui.quotes.QuotesFragment"
        android:label="@string/menu_quotes"
        tools:layout="@layout/fragment_quotes" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.erald_guri.smartflex_android.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/nav_tasks"
        android:name="com.erald_guri.smartflex_android.ui.tasks.NewTasksFragment"
        android:label="@string/menu_tasks"
        tools:layout="@layout/fragment_new_task" >
        <action
            android:id="@+id/action_nav_tasks_to_categoryDialogFragment"
            app:destination="@id/categoryDialogFragment" />
    </fragment>
    <dialog
        android:id="@+id/categoryDialogFragment"
        android:name="com.erald_guri.smartflex_android.ui.tasks.CategoryDialogFragment"
        android:label="CategoryDialogFragment" />
</navigation>